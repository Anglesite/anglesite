# Anglesite Application Environment Configuration
# Copy to .env.local and customize for your Anglesite development setup

# =============================================================================
# ANGLESITE APPLICATION SETTINGS
# =============================================================================

# Application data directory
# Default: OS-specific application data directory
# ANGLESITE_DATA_DIR=~/anglesite-data

# User themes directory
# Default: OS-specific application data directory + themes
# ANGLESITE_THEME_DIR=~/anglesite-themes

# User plugins directory  
# Default: OS-specific application data directory + plugins
# ANGLESITE_PLUGINS_DIR=~/anglesite-plugins

# =============================================================================
# ELECTRON APPLICATION SETTINGS
# =============================================================================

# Enable Electron dev tools in production builds
ANGLESITE_DEV_TOOLS=false

# Disable security warnings in development
# ELECTRON_DISABLE_SECURITY_WARNINGS=true

# Additional Electron arguments for development
# ELECTRON_EXTRA_ARGS=--no-sandbox --disable-gpu

# =============================================================================
# ELEVENTY INTEGRATION SETTINGS
# =============================================================================

# Eleventy configuration file path
# ELEVENTY_CONFIG=.eleventy.js

# Eleventy input directory
# ELEVENTY_INPUT=src

# Eleventy output directory
# ELEVENTY_OUTPUT=_site

# Enable Eleventy server mode
# ELEVENTY_SERVER=false

# Eleventy server port
# ELEVENTY_SERVER_PORT=8080

# =============================================================================
# THEME SYSTEM CONFIGURATION
# =============================================================================

# Default theme name
# ANGLESITE_DEFAULT_THEME=default

# Enable theme hot reloading in development
# ANGLESITE_THEME_HOT_RELOAD=true

# Theme marketplace URL
# ANGLESITE_THEME_MARKETPLACE_URL=https://themes.anglesite.dwk.io

# =============================================================================
# PLUGIN SYSTEM CONFIGURATION
# =============================================================================

# Enable plugin system
# ANGLESITE_PLUGINS_ENABLED=true

# Plugin marketplace URL  
# ANGLESITE_PLUGIN_MARKETPLACE_URL=https://plugins.anglesite.dwk.io

# Enable plugin hot reloading in development
# ANGLESITE_PLUGIN_HOT_RELOAD=true

# =============================================================================
# CONTENT MANAGEMENT SETTINGS
# =============================================================================

# Default content directory structure
# ANGLESITE_CONTENT_DIR=content

# Enable live reload for content changes
# ANGLESITE_CONTENT_LIVE_RELOAD=true

# Auto-save interval in milliseconds (0 to disable)
# ANGLESITE_AUTO_SAVE_INTERVAL=30000

# Enable content versioning
# ANGLESITE_CONTENT_VERSIONING=true

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Enable detailed logging
# ANGLESITE_DEBUG_MODE=false

# Log file location
# ANGLESITE_LOG_FILE=~/anglesite-logs/app.log

# Enable performance monitoring
# ANGLESITE_PERFORMANCE_MONITORING=false

# Enable error reporting (with user consent)
# ANGLESITE_ERROR_REPORTING=false

# =============================================================================
# SECURITY & PRIVACY SETTINGS
# =============================================================================

# Enable automatic updates
ANGLESITE_AUTO_UPDATE=true

# Enable telemetry (helps improve the application)
ANGLESITE_TELEMETRY=false

# Enable usage analytics (anonymous)
# ANGLESITE_ANALYTICS=false

# Check for security updates frequency (hours)
# ANGLESITE_SECURITY_CHECK_INTERVAL=24

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Custom webpack configuration file
# ANGLESITE_WEBPACK_CONFIG=webpack.config.js

# Custom babel configuration
# ANGLESITE_BABEL_CONFIG=babel.config.js

# Enable experimental features
# ANGLESITE_EXPERIMENTAL_FEATURES=false

# Memory limit for content processing (MB)
# ANGLESITE_MEMORY_LIMIT=512

# =============================================================================
# INTEGRATION SETTINGS
# =============================================================================

# Git integration settings
# ANGLESITE_GIT_ENABLED=true
# ANGLESITE_GIT_AUTO_COMMIT=false

# Preview server settings
# ANGLESITE_PREVIEW_PORT=3000
# ANGLESITE_PREVIEW_HOST=localhost

# External editor integration
# ANGLESITE_EXTERNAL_EDITOR=code

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================

# For local development, create .env.local with:
# ANGLESITE_DEV_TOOLS=true
# ANGLESITE_DEBUG_MODE=true
# ANGLESITE_THEME_HOT_RELOAD=true
# ANGLESITE_PLUGIN_HOT_RELOAD=true
# ANGLESITE_CONTENT_LIVE_RELOAD=true
# ELECTRON_DISABLE_SECURITY_WARNINGS=true