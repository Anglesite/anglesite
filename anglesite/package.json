{
  "name": "@dwk/anglesite",
  "description": "A local-first, open-source WYSIWYG static site generator.",
  "version": "0.1.0",
  "homepage": "https://anglesite.dwk.io",
  "license": "ISC",
  "author": {
    "name": "David W. Keith",
    "email": "git@dwk.io",
    "url": "https://dwk.io"
  },
  "scripts": {
    "build:app": "node bin/build-app.js",
    "build:icons": "node bin/build-icons.js",
    "build:react": "NODE_ENV=production webpack --config webpack.prod.js",
    "build:react:dev": "webpack --config webpack.dev.js",
    "build:react:sourcemaps": "NODE_ENV=production UPLOAD_SOURCE_MAPS=true webpack --config webpack.prod.js",
    "build:react:validate": "NODE_ENV=production VALIDATE_SOURCE_MAPS=true webpack --config webpack.prod.js",
    "build:react:secure": "NODE_ENV=production ELECTRON_IS_PACKAGED=true webpack --config webpack.prod.js",
    "build": "npm run build:react && npm run build:app",
    "build:parallel": "concurrently \"npm run build:app\" \"npm run build:icons\" \"npm run build:react:dev\"",
    "dev:react": "webpack serve --config webpack.dev.js --no-open",
    "dev:react:debug": "webpack serve --config webpack.dev.js --no-open --stats=verbose",
    "dev:react:analyze": "ANALYZE_BUNDLE=true webpack serve --config webpack.dev.js --no-open",
    "analyze:bundle": "ANALYZE_BUNDLE=true webpack --config webpack.prod.js",
    "analyze:bundle:server": "ANALYZE_BUNDLE=true ANALYZER_MODE=server webpack --config webpack.prod.js",
    "analyze:bundle:static": "ANALYZE_BUNDLE=true ANALYZER_MODE=static webpack --config webpack.prod.js",
    "analyze:bundle:json": "ANALYZE_BUNDLE=true ANALYZER_MODE=json webpack --config webpack.prod.js",
    "analyze:bundle:gzip": "ANALYZE_BUNDLE=true ANALYZER_SIZES=gzip webpack --config webpack.prod.js",
    "analyze:bundle:stats": "ANALYZE_BUNDLE=true ANALYZER_GENERATE_STATS=true webpack --config webpack.prod.js",
    "analyze:bundle:ci": "ANALYZE_BUNDLE=true ANALYZER_MODE=json ANALYZER_GENERATE_STATS=true ANALYZER_OPEN=false webpack --config webpack.prod.js",
    "analyze:view": "open dist/src/renderer/ui/react/bundle-report.html",
    "analyze:summary": "node scripts/bundle-summary.js",
    "dist": "node bin/dist-build.js",
    "clear-cache": "node bin/clear-cache.js",
    "dist:mac": "node bin/dist-build.js mac",
    "dist:win": "node bin/dist-build.js win",
    "dist:linux": "node bin/dist-build.js linux",
    "pack": "node bin/dist-build.js dir",
    "format": "prettier --write .",
    "lint": "eslint . && markdownlint '**/*.md' --ignore node_modules --ignore dist && htmlhint 'src/renderer/**/*.html'",
    "lint:parallel": "concurrently \"eslint .\" \"markdownlint '**/*.md' --ignore node_modules --ignore dist\" \"htmlhint 'src/renderer/**/*.html'\" --names \"eslint,markdown,html\" --prefix-colors \"red,magenta,cyan\"",
    "lint:html": "htmlhint 'src/renderer/**/*.html'",
    "prelint": "npm run format",
    "prestart": "npm run build",
    "pretest": "tsc",
    "start": "electron .",
    "start:dev": "npm run build:app && electron . --dev-react",
    "dev:full": "concurrently -k \"npm run dev:react\" \"npm run start:dev\" --names \"webpack,electron\" --prefix-colors \"blue,green\"",
    "dev:watch": "concurrently -k \"npm run dev:react\" \"npm run test:unit -- --watch\" --names \"webpack,tests\" --prefix-colors \"blue,yellow\"",
    "dev:complete": "concurrently -k \"npm run dev:react:debug\" \"npm run test:unit -- --watch\" \"npm run analyze:bundle:server\" --names \"webpack,tests,analyzer\" --prefix-colors \"blue,yellow,magenta\"",
    "test:coverage": "SKIP_PERFORMANCE_TESTS=true NODE_ENV=test jest --coverage --silent",
    "test:coverage:fast": "SKIP_PERFORMANCE_TESTS=true NODE_ENV=test jest --coverage --silent --runInBand --bail",
    "test:integration": "npm run test:integration --prefix ../",
    "test:unit": "SKIP_PERFORMANCE_TESTS=true NODE_ENV=test jest --testPathIgnorePatterns='/integration/' --testPathIgnorePatterns='/e2e/' --silent",
    "test:performance": "NODE_ENV=test jest test/performance/ --silent",
    "test:all": "npm run test:coverage && npm run test:integration",
    "test:with-performance": "NODE_ENV=test jest --silent",
    "test:parallel": "concurrently \"npm run test:unit\" \"npm run lint:parallel\" --names \"tests,lint\" --prefix-colors \"green,red\" --kill-others-on-fail",
    "test": "SKIP_PERFORMANCE_TESTS=true NODE_ENV=test jest --silent"
  },
  "keywords": [
    "static site generator",
    "ssg",
    "wysiwyg",
    "electron",
    "11ty",
    "local-first"
  ],
  "main": "dist/src/main/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anglesite/anglesite.git"
  },
  "bugs": {
    "url": "https://github.com/anglesite/anglesite/issues"
  },
  "build": {
    "appId": "io.dwk.anglesite",
    "productName": "Anglesite",
    "asar": true,
    "asarUnpack": [
      "node_modules/@dwk/anglesite-starter/**/*",
      "src/renderer/ui/**/*",
      "dist/src/renderer/ui/**/*"
    ],
    "directories": {
      "output": "dist/build",
      "buildResources": "src/assets/icons"
    },
    "files": [
      "dist/src/**/*",
      "src/renderer/ui/**/*.html",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "mac": {
      "icon": "src/assets/icons/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "src/assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "src/assets/icons/512x512.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "extraResources": [
      {
        "from": "src/main/eleventy",
        "to": "src/main/eleventy"
      },
      {
        "from": "src/renderer/ui/templates",
        "to": "src/renderer/ui/templates"
      }
    ]
  },
  "devDependencies": {
    "@electron/typescript-definitions": "^9.1.3",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.6.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/hostile": "^1.3.5",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/webpack-env": "^1.18.8",
    "@types/yauzl": "2.10.3",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "autoprefixer": "^10.4.21",
    "buffer": "^6.0.3",
    "concurrently": "9.2.1",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^53.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "fast-check": "4.3.0",
    "globals": "^16.3.0",
    "html-webpack-plugin": "^5.6.4",
    "htmlhint": "^1.6.3",
    "imagemin": "^9.0.1",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "markdownlint-cli": "^0.45.0",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.1.1",
    "postcss-nesting": "^13.0.2",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "process": "^0.11.10",
    "react-refresh": "^0.17.0",
    "responsive-loader": "^3.1.2",
    "sharp": "^0.33.5",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.1.12",
    "terser-webpack-plugin": "^5.3.14",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2",
    "webpack": "^5.101.3",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-dev-server": "^2.0.8",
    "@11ty/eleventy-plugin-webc": "0.12.0-beta.7",
    "@dwk/anglesite-11ty": "^0.3.0",
    "@dwk/anglesite-starter": "*",
    "@dwk/web-components": "^0.1.0",
    "@fluentui/web-components": "2.6.1",
    "@json-editor/json-editor": "^2.15.2",
    "@rjsf/core": "5.24.13",
    "@rjsf/mui": "5.24.13",
    "@rjsf/utils": "5.24.13",
    "@rjsf/validator-ajv8": "5.24.13",
    "@types/archiver": "^6.0.3",
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7",
    "@types/uuid": "10.0.0",
    "ace-builds": "^1.43.2",
    "ansi_up": "^6.0.6",
    "archiver": "^7.0.1",
    "bagit-fs": "^1.1.1",
    "chokidar": "^3.6.0",
    "glob": "^11.0.3",
    "hostile": "^1.4.0",
    "js-yaml": "^4.1.0",
    "lucide-static": "^0.539.0",
    "mkcert": "^3.2.0",
    "native-is-elevated": "^0.7.0",
    "react": "18.3.1",
    "react-arborist": "3.4.3",
    "react-dom": "18.3.1",
    "sudo-prompt": "^9.2.1",
    "uuid": "13.0.0",
    "yauzl": "3.2.0"
  }
}
