{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "outDir": "dist/test",
    "allowJs": true,
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "react", "react-dom"],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "test", "types/**/*.d.ts", "../anglesite-11ty/types/eleventy.d.ts"],
  "exclude": ["src/common/core/errors/examples.ts"]
}
