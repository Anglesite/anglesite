{
  "name": "@dwk/monorepo",
  "version": "1.0.0",
  "description": "DWK monorepo containing Anglesite packages",
  "private": true,
  "type": "module",
  "workspaces": [
    "anglesite",
    "anglesite-11ty",
    "anglesite-starter",
    "web-components"
  ],
  "scripts": {
    "start": "npm run start --workspace=anglesite",
    "build": "npm run build --workspaces",
    "test": "jest --passWithNoTests",
    "test:root": "jest",
    "test:workspaces": "npm run test --workspaces",
    "test:coverage": "jest --coverage --passWithNoTests",
    "lint": "npm run lint --workspaces && npm run lint:schemas",
    "lint:schemas": "npm run lint:schemas --workspace=anglesite-11ty",
    "format": "prettier --write .",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "9.36.0",
    "@types/jest": "30.0.0",
    "@types/node": "20.19.19",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "babel-jest": "30.2.0",
    "eslint": "9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "60.7.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "16.4.0",
    "htmlhint": "1.7.1",
    "jest": "30.2.0",
    "jest-environment-jsdom": "30.2.0",
    "markdownlint-cli": "0.45.0",
    "prettier": "^3.4.2",
    "ts-jest": "29.4.4",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "6.0.4",
    "@11ty/eleventy-plugin-webc": "0.12.0-beta.7",
    "date-fns": "4.1.0",
    "electron": "37.4.0",
    "html-minifier-terser": "^7.2.0",
    "simple-git": "3.28.0",
    "xmlbuilder2": "3.1.1",
    "yaml": "^2.8.1"
  },
  "author": {
    "name": "David W. Keith",
    "email": "git@dwk.io",
    "url": "https://dwk.io/"
  },
  "license": "ISC"
}
