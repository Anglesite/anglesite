{
  "name": "@dwk/monorepo",
  "version": "1.0.0",
  "description": "DWK monorepo containing Anglesite packages",
  "private": true,
  "type": "module",
  "workspaces": [
    "anglesite",
    "anglesite-11ty",
    "anglesite-starter",
    "web-components"
  ],
  "scripts": {
    "start": "npm run start --workspace=anglesite",
    "build": "npm run build --workspaces",
    "test": "jest --passWithNoTests && npm run test --workspaces",
    "test:root": "jest",
    "test:workspaces": "npm run test --workspaces",
    "test:coverage": "jest --coverage --passWithNoTests && npm run test:coverage --workspaces --if-present",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write .",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.33.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^53.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.11.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdownlint-cli": "^0.43.0",
    "prettier": "^3.4.2",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^5.0.0",
    "@11ty/eleventy-plugin-webc": "0.12.0-beta.7",
    "date-fns": "4.1.0",
    "html-minifier-terser": "^7.2.0",
    "simple-git": "3.28.0",
    "xmlbuilder2": "3.1.1",
    "yaml": "^2.8.1"
  },
  "author": {
    "name": "David W. Keith",
    "email": "git@dwk.io",
    "url": "https://dwk.io/"
  },
  "license": "ISC"
}
