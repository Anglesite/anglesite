{
  "name": "@dwk/workspace",
  "version": "0.1.0",
  "description": "DWK workspace containing Anglesite and related packages",
  "private": true,
  "workspaces": [
    "anglesite",
    "anglesite-11ty",
    "anglesite-starter",
    "web-components"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "build:anglesite": "npm run build --workspace=@dwk/anglesite",
    "build:anglesite-11ty": "npm run build --workspace=@dwk/anglesite-11ty",
    "build:anglesite-starter": "npm run build --workspace=@dwk/anglesite-starter",
    "build:web-components": "npm run build --workspace=@dwk/web-components",
    "test": "jest --config jest.config.js --silent --reporters=default --no-coverage --passWithNoTests",
    "test:verbose": "jest --config jest.config.js --verbose --no-coverage --passWithNoTests",
    "test:coverage": "jest --config jest.coverage.config.js",
    "test:integration": "jest --config jest.integration.config.js",
    "test:anglesite": "npm run test --workspace=@dwk/anglesite",
    "test:anglesite-11ty": "npm run test --workspace=@dwk/anglesite-11ty",
    "test:anglesite-starter": "npm run test --workspace=@dwk/anglesite-starter",
    "test:web-components": "npm run test --workspace=@dwk/web-components",
    "test:coverage:anglesite": "jest --config jest.coverage.config.js --selectProjects=@dwk/anglesite",
    "test:coverage:anglesite-11ty": "jest --config jest.coverage.config.js --selectProjects=@dwk/anglesite-11ty",
    "test:coverage:anglesite-starter": "jest --config jest.coverage.config.js --selectProjects=@dwk/anglesite-starter",
    "test:coverage:web-components": "jest --config jest.coverage.config.js --selectProjects=@dwk/web-components",
    "test:performance": "jest --config jest.performance.config.js",
    "lint": "npm run lint --workspaces",
    "format": "npm run format --workspaces",
    "start:anglesite": "npm run start --workspace=@dwk/anglesite",
    "dev:anglesite": "npm run start:dev --workspace=@dwk/anglesite",
    "clean": "npm run clean --workspaces --if-present",
    "prepare": "husky",
    "scripts:generate-types": "npx tsx scripts/generate-types.ts",
    "scripts:validate-json": "node scripts/validate-json.cjs",
    "changelog": "node scripts/generate-changelog.js changelog",
    "changelog:since": "node scripts/generate-changelog.js changelog",
    "changelog:package": "node scripts/generate-changelog.js package",
    "changelog:release-notes": "node scripts/generate-changelog.js release-notes",
    "verify-secrets": "node scripts/verify-secrets.js",
    "verify-jest": "node scripts/verify-jest-config.js"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-typescript": "^7.27.1",
    "babel-jest": "^30.0.5",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "json-schema-to-typescript": "^15.0.4",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=22.12.0",
    "npm": ">=8.0.0"
  },
  "author": {
    "name": "David W. Keith",
    "email": "git@dwk.io",
    "url": "https://dwk.io"
  },
  "license": "ISC",
  "lint-staged": {
    "*.{json,md,html,css}": [
      "prettier --write"
    ]
  }
}
