{
  "name": "@dwk/web-components",
  "version": "0.1.0",
  "homepage": "https://anglesite.dwk.io/web-components",
  "description": "Web Components for use in 11ty projects",
  "license": "ISC",
  "author": {
    "name": "David W. Keith",
    "email": "git@dwk.io",
    "url": "https://dwk.io/"
  },
  "keywords": [
    "webc",
    "11ty"
  ],
  "type": "module",
  "main": "dist/eleventy.config.js",
  "engines": {
    "node": ">=22.12.0"
  },
  "scripts": {
    "start": "npx @11ty/eleventy --serve --config=eleventy.config.ts",
    "build": "npx @11ty/eleventy --config=eleventy.config.ts",
    "build:lib": "tsc",
    "build:types": "tsc",
    "prepare": "npm run build:lib",
    "format": "prettier --write .",
    "lint": "eslint . && markdownlint '**/*.md' --ignore node_modules --ignore dist --ignore _site && htmlhint 'components/**/*.html' 'src/**/*.html'",
    "lint:html": "htmlhint 'components/**/*.html' 'src/**/*.html'",
    "prelint": "npm run format",
    "test": "npm build"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.27.1",
    "@dwk/anglesite-11ty": "*",
    "@eslint/js": "^9.33.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "babel-jest": "^29.7.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^53.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^15.11.0",
    "htmlhint": "^1.1.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "markdownlint-cli": "^0.43.0",
    "prettier": "^3.4.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@11ty/eleventy-plugin-webc": "^0.4.0"
  }
}
