# ABOUTME: NPM configuration for enhanced caching and performance optimization
# ABOUTME: Configures package management, registry settings, and caching behavior

# Package registry and authentication
registry=https://registry.npmjs.org/

# Caching configuration
prefer-online=false
# Use offline cache when possible for better performance

# Enable package-lock for reproducible builds
package-lock=true
save-exact=true

# Workspace configuration
workspaces-update=true
install-strategy=nested

# Progress and logging
progress=true
loglevel=warn

# Security settings
audit-level=moderate
fund=false

# Performance optimizations
prefer-offline=true
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Node modules optimization (removed deprecated configs)
# Using npm defaults for module linking

# Development optimizations
# Using npm defaults for optional dependencies

# CI/CD specific settings (will be overridden by environment)
# These are defaults for local development
update-notifier=false